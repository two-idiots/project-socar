<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Home</title>
  </head>
  <body>
    <div>
      <% if(user.name == undefined) { %>
        <h3>Please, <a href="/auth/login">login</a> or <a href="/auth/register">sign up</a></h3>
      <% } else if(user.name != undefined) { %>
        <h3>Welcome! <%= user.name %></h3>
        <a href="/auth/logout">Logout</a>
      <% } %>
    </div>
  </body>
</html>
